@model Category

@{
    ViewData["Title"] = "Създай Категория";
}

<div class="container mt-3">
    <h2>Създай Категория</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" class="mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BannerImage" class="control-label"></label>
                    <input asp-for="BannerImage" class="form-control" />
                    <span asp-validation-for="BannerImage" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-3">Създай</button> или <a asp-action="Index">се върни обратно</a>
            </form>
        </div>
    </div>
</div>
