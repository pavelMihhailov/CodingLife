@model PromoCode

@{
    ViewData["Title"] = "Изтрий Промо Код";
}

<div class="container mb-3 mt-3">
    <h1>Изтрий</h1>

    <h3>Наистина ли искате да изтриете този промо код?</h3>
    <div>
        <h4>Промо код</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsUsed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsUsed)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PercentageDiscount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PercentageDiscount)
            </dd>
            <dt class="col-sm-2">
                Притежател
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedOn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedOn)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Изтрий" class="btn btn-danger" /> |
            <a asp-action="Index">Върни се обратно</a>
        </form>
    </div>
</div>