@model OrderInfoViewModel
@{
    this.ViewData["Title"] = "Order Details";
}

<div class="page-top-info">
    <div class="container">
        <h4>Order Details</h4>
        <div class="site-pagination">
            <a asp-controller="Home" asp-action="Index">Home</a> /
            <a>Order Details</a>
        </div>
    </div>
</div>

<div class="container">
    <h1>Details about</h1>
    <div>
        <h4>Order #@Model.OrderId</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductsOrdered)
            </dt>
            <dd class="col-sm-10">
                <table>
                    <thead>
                        <tr>
                            <th>Product Id</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.ProductsOrdered)
                        {
                            <tr>
                                <td>
                                    #@product.ProductId
                                </td>
                                <td>
                                    @product.Name
                                </td>
                                <td>
                                    @product.Price
                                </td>
                                <td>
                                    @product.Quantity
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderStatus)
            </dt>
            <dd class="col-sm-10">
                <span class="badge badge-@Model.BadgeStatusCss">@Model.OrderStatus</span>
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>