@page
@model LoginModel

@{
    ViewData["Title"] = "Влез в профила";
}

<div class="container custom-form">
    <h2 class="p-4">@ViewData["Title"]</h2>
    <div>
        <section>
            <form id="account" method="post" class="contact-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="text" asp-for="Input.Username" placeholder="@Html.DisplayNameFor(m => m.Input.Username)" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" placeholder="@Html.DisplayNameFor(m => m.Input.Password)" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button class="site-btn" type="submit">Влез</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забравил съм си паролата</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Нова регистрация</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
