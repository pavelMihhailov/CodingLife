@using Merchain.Common.Order

@model OrderViewModel

@{
    this.ViewData["Title"] = "Confirm Order";
}

<div class="page-top-info">
    <div class="container">
        <h4>Confirm Order</h4>
        <div class="site-pagination">
            <a asp-controller="Home" asp-action="Index">Home</a> /
            <a>Confirm Order</a>
        </div>
    </div>
</div>

<section class="checkout-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 order-2 order-lg-1">
                <form class="checkout-form" name="orderForm" asp-controller="Order" asp-action="MakeOrder">
                    <div class="cf-title">Billing Address</div>
                    <div class="row">
                        <div class="col-md-7">
                            <p>*Billing Information</p>
                        </div>
                        <div class="col-md-5">
                            <div class="cf-radio-btns address-rb">
                                <div class="cfr-item">
                                    <input type="radio" name="UseRegularAddress" id="regularTrue" checked="checked" value="true">
                                    <label for="regularTrue">Use my regular address</label>
                                </div>
                                <div class="cfr-item">
                                    <input type="radio" name="UseRegularAddress" id="regularFalse" value="false">
                                    <label for="regularFalse">Use a different address</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row address-inputs">
                        <div class="col-md-12">
                            <input type="text" placeholder="Address" name="Address">
                            <input type="text" placeholder="Address line 2" name="Address2">
                            <input type="text" placeholder="Country" name="Country">
                        </div>
                        <div class="col-md-6">
                            <input type="text" placeholder="Zip code" name="ZipCode">
                        </div>
                        <div class="col-md-6">
                            <input type="text" placeholder="Phone no." name="Phone">
                        </div>
                    </div>
                    <div class="cf-title">Delievery Info</div>
                    <div class="row shipping-btns">
                        <div class="col-6">
                            <h4>Standard</h4>
                        </div>
                        <div class="col-6">
                            <div class="cf-radio-btns">
                                <div class="cfr-item">
                                    <input type="radio" name="ShippingPaid" checked="checked" id="ship-1" value="false">
                                    <label for="ship-1">$@ShippingConstants.Free</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4>Next day delievery  </h4>
                        </div>
                        <div class="col-6">
                            <div class="cf-radio-btns">
                                <div class="cfr-item">
                                    <input type="radio" name="ShippingPaid" id="ship-2" value="true">
                                    <label for="ship-2">$@ShippingConstants.NextDay</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cf-title">Payment</div>
                    <ul class="payment-list">
                        <li>
                            <input type="radio" name="PayType" id="paypal" value="PayPal" />
                            <label class="mr-2" for="paypal">Paypal</label>
                            <img src="img/paypal.png" alt="">
                        </li>
                        <li>
                            <input type="radio" name="PayType" id="card" value="Card" />
                            <label class="mr-2" for="card">Credit / Debit card</label>
                            <img src="img/mastercart.png" alt="">
                        </li>
                        <li>
                            <input type="radio" name="PayType" id="later" value="Later" />
                            <label class="mr-2" for="later">Pay when you get the package</label>
                        </li>
                    </ul>
                    @for (int i = 0; i < Model.CartItems.Count; i++)
                    {
                        <input type="hidden" name="CartItems[@i].ProductId" value="@Model.CartItems[i].Product.Id" />
                        <input type="hidden" name="CartItems[@i].Quantity" value="@Model.CartItems[i].Quantity" />
                    }
                    <input type="hidden" name="Total" value="@Model.Total" />
                    @if (Model.AppliedPromoCode != null)
                    {
                        <input type="hidden" name="PromoCodeId" value="@Model.AppliedPromoCode.Id" />
                    }
                    <button type="submit" class="site-btn submit-order-btn">Place Order</button>
                </form>
            </div>
            <div class="col-lg-4 order-1 order-lg-2">
                <div class="checkout-cart">
                    <h3>Your Cart</h3>
                    <ul class="product-list">
                        @foreach (var item in Model.CartItems)
                        {
                            <li>
                                <div class="pl-thumb">
                                    <img src="@item.Product.ImagesUrls.Split(';')[0]" alt="@item.Product.Name">
                                </div>
                                <h6>@item.Product.Name <p style="color: red">x @item.Quantity</p></h6>
                                <p>$@item.Product.Price</p>
                            </li>
                        }
                    </ul>
                    <ul class="price-list">
                        <li>Total<span>$@Model.Total</span></li>
                        <li>Shipping<span>free</span></li>
                        @if (Model.AppliedPromoCode != null)
                        {
                            <li>Promo Code Applied: <strong>@Model.AppliedPromoCode.PercentageDiscount% Discount</strong></li>
                        }
                        <li class="total">Total<span>$@Model.Total</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/order.js"></script>
}