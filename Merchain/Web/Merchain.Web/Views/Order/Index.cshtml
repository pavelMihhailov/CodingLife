@model OrderViewModel
@{
    this.ViewData["Title"] = "Потвърди Поръчката";
}

<div class="page-top-info">
    <div class="container">
        <h4>Потвърди Поръчката</h4>
        <div class="site-pagination">
            <a asp-controller="Home" asp-action="Index">Начало</a> /
            <a>Потвърди Поръчката</a>
        </div>
    </div>
</div>

<section class="checkout-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 order-2 order-lg-1">
                <form class="checkout-form" name="orderForm" asp-controller="Order" asp-action="MakeOrder">
                    <div class="cf-title">*Адрес за доставка</div>
                    <div class="cf-radio-btns ml-4 shipping-btns">
                        @if (Model.UserHasAddressByDefault)
                        {
                            <div class="cfr-item">
                                <input type="radio" name="UseRegularAddress" id="regularTrue" value="true">
                                <label for="regularTrue">Използвай адреса ми по подразбиране</label>
                            </div>
                        }
                        <div class="cfr-item">
                            <input type="radio" name="UseRegularAddress" id="regularFalse" checked="checked" value="false">
                            <label for="regularFalse">Използвай друг адрес</label>
                        </div>
                    </div>
                    <div class="row address-inputs">
                        <div class="col-md-12">
                            <input type="text" required placeholder="Address" name="Address">
                            <input type="text" required placeholder="Address line 2" name="Address2">
                            <input type="text" required placeholder="Country" name="Country">
                        </div>
                        <div class="col-md-6">
                            <input type="text" required placeholder="Zip code" name="ZipCode">
                        </div>
                    </div>
                    <div class="cf-title">*Информация за доставка</div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" required placeholder="Име" name="FirstName">
                        </div>
                        <div class="col-md-6">
                            <input type="text" required placeholder="Фамилия" name="LastName">
                        </div>
                        <div class="col-md-6">
                            <input type="text" required placeholder="Телефон" name="Phone">
                        </div>
                    </div>
                    <div class="cf-title">Начин на плащане</div>
                    <div class="cf-radio-btns ml-4 shipping-btns">
                        <div class="cfr-item">
                            <input type="radio" name="PayType" id="later" value="Later" required checked>
                            <label for="later">Наложен Платеж</label>
                        </div>
                    </div>
                    @for (int i = 0; i < Model.CartItems.Count; i++)
                    {
                        <input type="hidden" name="CartItems[@i].ProductId" value="@Model.CartItems[i].Product.Id" />
                        <input type="hidden" name="CartItems[@i].Quantity" value="@Model.CartItems[i].Quantity" />
                    }
                    <input type="hidden" name="Total" value="@Model.Total" />
                    @if (Model.AppliedPromoCode != null)
                    {
                        <input type="hidden" name="PromoCodeId" value="@Model.AppliedPromoCode.Id" />
                    }
                    <button type="submit" class="site-btn submit-order-btn">Направи Поръчката</button>
                </form>
            </div>
            <div class="col-lg-4 order-1 order-lg-2">
                <div class="checkout-cart">
                    <h3>Твоята Количка</h3>
                    <ul class="product-list">
                        @foreach (var item in Model.CartItems)
                        {
                            <li>
                                <div class="pl-thumb">
                                    <img src="@item.Product.ImagesUrls.Split(';')[0]" alt="@item.Product.Name">
                                </div>
                                <h6>@item.Product.Name <p style="color: red">x @item.Quantity</p></h6>
                                <p>@item.Product.Price лв.</p>
                            </li>
                        }
                    </ul>
                    <ul class="price-list">
                        @if (Model.AppliedPromoCode != null)
                        {
                            <li>Приложен Промо Код: <strong>@Model.AppliedPromoCode.PercentageDiscount% Отстъпка</strong></li>
                        }
                        <li class="total">Общо <span>@Model.Total лв.</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/order.js"></script>
    <partial name="_ValidationScriptsPartial" />
}