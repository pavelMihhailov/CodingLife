@using Merchain.Common
<!DOCTYPE html>
<html>
<head>
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <meta charset="UTF-8">
    <meta name="description" content="Merchain">
    <meta name="keywords" content="merchain, eCommerce, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>

    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    @RenderSection("Styles", required: false)

    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300,300i,400,400i,700,700i" rel="stylesheet">
    <link href="~/img/favicon.ico" rel="shortcut icon" />
</head>
<body>
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <header class="header-section" id="header">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 text-center text-lg-left">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="site-logo">
                            <img src="~/img/merchain-logo.png" alt="">
                        </a>
                    </div>
                    <div class="col-xl-6 col-lg-5">
                        <form class="header-search-form" asp-controller="Search" asp-action="Index" method="get">
                            <input type="text" name="query" placeholder="Search for products by name or ID ...">
                            <button><i class="flaticon-search"></i></button>
                        </form>
                    </div>
                    <div class="col-xl-4 col-lg-5">
                        <div class="user-panel">
                            <partial name="_LoginPartial" />

                            <div class="up-item">
                                <div class="shopping-card">
                                    <i class="flaticon-bag"></i>
                                    <span>0</span>
                                </div>
                                <a asp-area="" asp-controller="ShoppingCart" asp-action="Index">Shopping Cart</a>
                            </div>
                            <div class="up-item ml-2">
                                <div class="pointer">
                                    <i class="flaticon-heart"></i>
                                    <a asp-area="" asp-controller="Products" asp-action="WishList">Wish List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <partial name="_AdminNavbar" />
        }
        else
        {
            <partial name="_Navbar" />
        }
    </header>
    <main class="main-content">
        <partial name="_CookieConsentPartial" />

        <partial name="/Views/Shared/Partials/_SuccessPopup.cshtml"
                 model="this.ViewData[ViewDataConstants.SucccessMessage]" />
        <partial name="/Views/Shared/Partials/_ErrorPopup.cshtml"
                 model="this.ViewData[ViewDataConstants.ErrorMessage]" />

        @this.RenderBody()

        <div id="addedToWishList" class="modal-window">
            <div class="text-center">
                <h1>You liked this product!</h1>
                <div>You can find it in your wish list.</div>
            </div>
        </div>
        <div id="addedToCart" class="modal-window">
            <div class="text-center">
                <h1>Your product is added to the shopping cart!</h1>
            </div>
        </div>
    </main>
    <partial name="_Footer" />

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    </environment>

    <partial name="_ScriptsPartial" />

    @RenderSection("Scripts", required: false)

</body>
</html>