@model CartViewModel

@{
    this.ViewData["Title"] = "Cart";
}

<div class="page-top-info">
    <div class="container">
        <h4>Your cart</h4>
        <div class="site-pagination">
            <a asp-controller="Home" asp-action="Index">Home</a> /
            <a>Your cart</a>
        </div>
    </div>
</div>

<section class="cart-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-table">
                    @if (!Model.Cart.Any())
                    {
                        <h3>Your cart is empty</h3>
                    }
                    else
                    {
                        <h3>Your Cart</h3>
                        <div class="cart-table-warp">
                            <table>
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="product-th">Product</th>
                                        <th class="quy-th">Quantity</th>
                                        <th class="total-th">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cart)
                                    {
                                        var product = item.Product;
                                        <tr id="@product.Id">
                                            <td><img src="~/img/icons/clear.svg" class="remove-icon mr-2" /></td>
                                            <td class="product-col">
                                                <img src="@product.ImagesUrls.Split(';')[0]" alt="@product.Name">
                                                <div class="pc-title">
                                                    <h4>@product.Name</h4>
                                                    <p>$@product.Price</p>
                                                </div>
                                            </td>
                                            <td class="quy-col">
                                                <div class="quantity">
                                                    <div class="pro-qty">
                                                        <input type="text" name="Quantity" value="@item.Quantity">
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="total-col"><h4>$@(item.Quantity * product.Price)</h4></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="total-cost">
                            <h6>Total <span>$@Model.SumTotal</span></h6>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-4 card-right">
                <form class="promo-code-form">
                    <input type="text" placeholder="Enter promo code" name="PromoCode">
                    <a class="applyPromoCode" href="javascript:;">Submit</a>
                </form>
                <a asp-area="" asp-controller="Order" asp-action="Index" class="site-btn checkout-btn">Proceed to checkout</a>
                <a asp-controller="Products" asp-action="Index" class="site-btn sb-dark">Continue shopping</a>
            </div>
        </div>
    </div>
</section>

<section class="related-product-section">
    <div class="container">
        <div class="section-title text-uppercase">
            <h2>Continue Shopping</h2>
        </div>
        <div class="row">
            <partial name="/Views/Products/Partials/_ListProducts.cshtml" model="Model.SuggestedProducts" />
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/cart.js"></script>
}