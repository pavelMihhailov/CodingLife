@using Merchain.Web.ViewModels.PromoCodes

@model IEnumerable<MyPromoCodesViewModel>
@{
    this.ViewData["Title"] = "Моите Промо Кодове";
}

<div class="page-top-info">
    <div class="container">
        <div class="site-pagination">
            <a asp-controller="Home" asp-action="Index">Home</a> /
            <a>Моите Промо Кодове</a>
        </div>
    </div>
</div>

<div class="container mt-3">
    @if (!Model.Any())
    {
        <h2>Нямате неизползвани промо кодове.</h2>
    }
    else
    {
        <table class="table table-striped">
            <thead class="table-head">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Code)</th>
                    <th>@Html.DisplayNameFor(model => model.PercentageDiscount)%</th>
                    <th>@Html.DisplayNameFor(model => model.ValidUntil)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var code in Model)
                {
                    <tr>
                        <td>@code.Code</td>
                        <td>@code.PercentageDiscount</td>
                        <td>@code.ValidUntil.ToLocalTime()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>